<div class="container">
  <h1><%= @list.name %></h1>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <%= image_tag bookmark.movie.poster_url, class: "card-img-top"%>
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= bookmark.comment %></h6>
        <%= link_to "Delete this bookmark", list_bookmark_path(bookmark), class: "btn btn-ghost", data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}%>
      </div>
    </div>
  <% end %>
  <%= link_to "Back", lists_path, class: "btn btn-ghost" %>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-ghost" %>
</div>
